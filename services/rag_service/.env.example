# Local document mirror (optional: only used if OPENAI_SYNC_DOCUMENTS=true)
RAG_STORAGE_DIR=/absolute/path/to/storage
RAG_DOCUMENTS_DIR=/absolute/path/to/storage/documents

# Networking controls
RAG_SERVICE_HOST=0.0.0.0
RAG_SERVICE_PORT=8081
RAG_SERVICE_TOP_K=6
RAG_SERVICE_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
RAG_MAX_DOCUMENT_BYTES=26214400

# OpenAI Retrieval (required)
# API key shared with both the LiveKit agent and the RAG service
OPENAI_API_KEY=
# Optional: pre-provisioned store id; leave empty to auto-create
OPENAI_VECTOR_STORE_ID=
# Name used when auto-creating or reusing a vector store
OPENAI_VECTOR_STORE_NAME=livekit-agent-rag
OPENAI_RAG_MODEL=gpt-4.1-mini
# Automatically upload everything under ${RAG_DOCUMENTS_DIR}
OPENAI_SYNC_DOCUMENTS=true
