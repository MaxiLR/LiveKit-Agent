# Override default storage root if deploying outside the monorepo
RAG_STORAGE_DIR=/absolute/path/to/storage  # must contain /documents and /indexes
RAG_DOCUMENTS_DIR=/absolute/path/to/storage/documents
RAG_INDEX_DIR=/absolute/path/to/storage/indexes

# Networking controls
RAG_SERVICE_HOST=0.0.0.0
RAG_SERVICE_PORT=8081
RAG_SERVICE_TOP_K=6

# Shared embedding configuration
RAG_EMBED_MODEL=intfloat/multilingual-e5-base
